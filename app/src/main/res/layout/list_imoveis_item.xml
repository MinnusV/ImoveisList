<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/person"
        android:id="@+id/imovelList_imageViewPhoto"/>

    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/imovelList_textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="name"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/imovelList_textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imovelList_textViewName"
            android:paddingLeft="10dp"
            android:text="price"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imovelList_Phone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_phone"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imovelList_Map"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_map"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imovelList_Star"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_star"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imovelList_avalible"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/ic_check" />

</LinearLayout>